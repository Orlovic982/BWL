<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="28dp">

        <!-- TODO: Update blank fragment layout -->

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_logocolored" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginTop="40dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="@string/welocemsg"
                android:textAlignment="center"
                android:textColor="#555555"
                android:textSize="33sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="10dp"
                android:paddingStart="60dp"
                android:paddingEnd="60dp"
                android:text="@string/onboardingtext"
                android:textAlignment="center"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="43dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:hint="@string/email"
                android:background="@drawable/email_stroke"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:paddingTop="9dp"
                android:background="@drawable/email_stroke"
                android:paddingBottom="9dp"
                android:drawableEnd="@drawable/ic_eyebutton"
                android:hint="@string/password"
                />

            <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="15dp"
                android:text="@string/forgot_password"
                android:textColor="@color/bwlcolor" />

            <Button
                style="@style/Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="15dp"
                android:baselineAligned="true"
                android:stateListAnimator="@null"
                android:text="@string/login" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/don_t_have_an_account"
                android:textAlignment="center" />

            <Button
                style="@style/Button.Ghost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:stateListAnimator="@null"
                android:text="@string/create_an_account" />


        </LinearLayout>

    </LinearLayout>
</layout>